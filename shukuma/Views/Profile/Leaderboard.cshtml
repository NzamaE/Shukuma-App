@model List<shukuma.domain.Models.LeaderboardEntry>

@{
    ViewData["Title"] = "Leaderboard";
    ViewData["IsSignedIn"] = "true";
}

<style>
    .leaderboard-container {
        background: #F5F5F5;
        min-height: 100vh;
        padding: 30px 15px;
    }

    .leaderboard-header {
        text-align: center;
        color: white;
        margin-bottom: 40px;
    }

        .leaderboard-header h1 {
            font-size: 3rem;
            margin-bottom: 10px;
        }

    .leaderboard-content {
        max-width: 1000px;
        margin: 0 auto;
    }

    .filter-tabs {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .filter-tab {
        padding: 12px 24px;
        background: white;
        color: #667eea;
        text-decoration: none;
        border-radius: 25px;
        font-weight: bold;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

        .filter-tab:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
            color: #764ba2;
        }

        .filter-tab.active {
            background: linear-gradient(135deg, #FFD700 0%, #FFC107 100%);
            color: white;
        }

    .leaderboard-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    }

    .podium {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 40px;
    }

    .podium-item {
        text-align: center;
        padding: 25px;
        border-radius: 15px;
        transition: transform 0.3s ease;
    }

        .podium-item:hover {
            transform: translateY(-5px);
        }

    .podium-1 {
        background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
        grid-row: 1;
        grid-column: 2;
    }

    .podium-2 {
        background: linear-gradient(135deg, #FFD700 0%, #FFC107 100%);
        grid-row: 2;
        grid-column: 1;
    }

    .podium-3 {
        background: linear-gradient(135deg, #CD7F32 0%, #8B4513 100%);
        grid-row: 2;
        grid-column: 3;
    }

    .podium-rank {
        font-size: 3rem;
        margin-bottom: 10px;
    }

    .podium-name {
        font-size: 1.3rem;
        font-weight: bold;
        color: white;
        margin-bottom: 10px;
    }

    .podium-stats {
        color: rgba(255,255,255,0.9);
        font-size: 0.95rem;
    }

    .leaderboard-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .leaderboard-item {
        display: grid;
        grid-template-columns: 60px 1fr auto auto;
        gap: 20px;
        align-items: center;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 15px;
        margin-bottom: 12px;
        transition: all 0.3s ease;
    }

        .leaderboard-item:hover {
            transform: translateX(5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

    .rank {
        font-size: 1.8rem;
        font-weight: bold;
        color: #667eea;
        text-align: center;
    }

    .user-info {
        display: flex;
        flex-direction: column;
    }

    .user-name {
        font-weight: bold;
        font-size: 1.1rem;
        color: #333;
    }

    .user-stats {
        color: #666;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .stat-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 0.95rem;
        white-space: nowrap;
    }

    .badge-workouts {
        background: #667eea;
        color: white;
    }

    .badge-time {
        background: #28a745;
        color: white;
    }

    .badge-cards {
        background: #ffc107;
        color: #333;
    }

    .achievement-icon {
        font-size: 1.5rem;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .btn-back {
        display: block;
        width: fit-content;
        margin: 30px auto 0;
        padding: 12px 30px;
        background: white;
        color: #667eea;
        text-decoration: none;
        border-radius: 10px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: #f8f9fa;
            color: #764ba2;
        }

    @@media (max-width: 768px) {
        .podium {
            grid-template-columns: 1fr;
        }

        .podium-1, .podium-2, .podium-3 {
            grid-row: auto;
            grid-column: 1;
        }

        .leaderboard-item {
            grid-template-columns: auto 1fr;
            gap: 15px;
        }

        .stat-badge {
            grid-column: 1 / -1;
            text-align: center;
        }
    }
</style>

<div class="leaderboard-container">
    <div class="leaderboard-header">
        <h1>🏆 Leaderboard</h1>
        <p>Compete with the best!</p>
    </div>

    <div class="leaderboard-content">
        <!-- Filter Tabs -->
        <div class="filter-tabs">
            <a href="@Url.Action("LeaderboardByWorkouts", "Profile")" class="filter-tab">
                🏋️ Most Workouts
            </a>
            <a href="@Url.Action("LeaderboardByTime", "Profile")" class="filter-tab">
                ⚡ Best Time
            </a>
            <a href="@Url.Action("Leaderboard", "Profile")" class="filter-tab active">
                🌟 Overall
            </a>
        </div>

        <div class="leaderboard-card">
            @if (Model != null && Model.Any())
            {
                <!-- Top 3 Podium -->
                @if (Model.Count >= 3)
                {
                    <div class="podium">
                        <!-- 1st Place -->
                        <div class="podium-item podium-1">
                            <div class="podium-rank">🥇</div>
                            <div class="podium-name">@Model[0].UserName</div>
                            <div class="podium-stats">
                                @Model[0].TotalWorkouts workouts<br />
                                @Model[0].TotalCardsCompleted cards<br />
                                @Model[0].BestTime
                            </div>
                        </div>

                        <!-- 2nd Place -->
                        <div class="podium-item podium-2">
                            <div class="podium-rank">🥈</div>
                            <div class="podium-name">@Model[1].UserName</div>
                            <div class="podium-stats">
                                @Model[1].TotalWorkouts workouts<br />
                                @Model[1].TotalCardsCompleted cards<br />
                                @Model[1].BestTime
                            </div>
                        </div>

                        <!-- 3rd Place -->
                        <div class="podium-item podium-3">
                            <div class="podium-rank">🥉</div>
                            <div class="podium-name">@Model[2].UserName</div>
                            <div class="podium-stats">
                                @Model[2].TotalWorkouts workouts<br />
                                @Model[2].TotalCardsCompleted cards<br />
                                @Model[2].BestTime
                            </div>
                        </div>
                    </div>
                }

                <!-- Full Leaderboard List -->
                <h3 style="color: #667eea; margin-bottom: 20px;">📊 Full Rankings</h3>
                <ul class="leaderboard-list">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var entry = Model[i];
                        var rank = i + 1;
                        var rankEmoji = rank switch
                        {
                            1 => "🥇",
                            2 => "🥈",
                            3 => "🥉",
                            _ => $"#{rank}"
                        };

                        <li class="leaderboard-item">
                            <div class="rank">@rankEmoji</div>

                            <div class="user-info">
                                <span class="user-name">
                                    @entry.UserName
                                    @if (entry.HasCompleted52Cards)
                                    {
                                        <span class="achievement-icon" title="Completed 52-card challenge">🏆</span>
                                    }
                                </span>
                                <span class="user-stats">
                                    @entry.TotalWorkouts workouts • @entry.TotalCardsCompleted total cards
                                </span>
                            </div>

                            <div class="stat-badge badge-workouts">
                                🏋️ @entry.TotalWorkouts
                            </div>

                            <div class="stat-badge badge-time">
                                ⏱️ @entry.BestTime
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">🏆</div>
                    <p style="font-size: 1.2rem;">No leaderboard data yet!</p>
                    <p>Complete workouts to see your ranking here.</p>
                </div>
            }
        </div>

        <a href="@Url.Action("Dashboard", "Profile")" class="btn-back">
            ← Back to Dashboard
        </a>
    </div>
</div>