@model shukuma.domain.Models.UserModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["IsSignedIn"] = "true";
    var stats = ViewData["UserStats"] as shukuma.domain.Models.UserStats;

    

}

<style>
    .dashboard-container {
        background: #F5F5F5;
        min-height: 100vh;
        padding: 30px 15px;
    }


    .dashboard-header {
        text-align: center;
        margin-bottom: 50px;
    }

        .dashboard-header h1 {
            font-size: 2.5rem;
            margin-bottom: 5px;
            color: black; /* your change */
            font-weight: bold;
        }


    /* Dashboard grid */
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); /* wider cards */
        gap: 25px;
        max-width: 2000px;
        margin: 0 auto;
    }


    /* Stat cards */
    .stat-card {
        position: relative;
        overflow: hidden;
        background-size: cover;
        background-position: center;
        border-radius: 10px;
        padding: 60px; /* bigger padding for taller cards */
        min-height: 300px; /* ensures cards are taller */
        min-width: 300px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        text-align: center;
        transition: transform 0.3s ease;
        color: white; /* ensures text is white */
    }

        /* Dim overlay for readability */
        .stat-card::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.4); /* dims the background image */
            z-index: 0;
        }

        .stat-card > * {
            position: relative;
            z-index: 1; /* text above overlay */
        }

        /* Hover effect stays the same */
        .stat-card:hover {
            transform: translateY(-5px);
        }



    .card1 {
        background-image: url('/assets/workout_Tot.jpeg');
    }

    .card2 {
        background-image: url('/assets/Card.jpeg');
    }

    .card3 {
        background-image: url('/assets/Clock.jpeg');
    }

    .card4 {
        background-image: url('/assets/download.jpeg');
    }

    .stat-icon {
        font-size: 3rem;
        margin-bottom: 15px;
        color: white; /* icon color */
        font-weight: bold; /* bold icon */
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: bold; /* already bold, just reinforce */
        color: white; /* text white */
        display: block;
        margin-bottom: 10px;
    }

    .stat-label {
        font-size: 1.1rem;
        font-weight: bold; /* make label bold */
        color: white; /* text white */
    }


    .action-buttons {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .action-btn {
        padding: 20px;
        background: white;
        color: #FFD700;
        text-decoration: none;
        border-radius: 15px;
        font-weight: bold;
        font-size: 1.1rem;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
            color: #FFD700;
        }

    .recent-workouts {
        background: white;
        border-radius: 20px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    }
    /* Background image for Recent Workouts */
    .recent-workouts {
        position: relative;
        overflow: hidden;
        background-image: url('/assets/Dark_Gym-2.jpeg'); /* change to your image */
        background-size: cover;
        background-position: center;
        border-radius: 20px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        color: white; /* Make text white for visibility */
    }

        /* Dim overlay to improve readability */
        .recent-workouts::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.45); /* dark overlay */
            z-index: 0;
            border-radius: 20px;
        }

        .recent-workouts > * {
            position: relative;
            z-index: 1; /* place text above overlay */
        }

    /* Workout items */
    .workout-item {
        padding: 15px;
        background: rgba(255,255,255,0.15); /* translucent white box */
        border-radius: 10px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: black;
        backdrop-filter: blur(3px); /* optional: frosted glass effect */
    }

    .recent-workouts h3 {
        color: #FFD700;
        margin-bottom: 20px;
    }


        .recent-workouts h3 {
            color: #FFD700;
            margin-bottom: 20px;
        }

    .workout-item {
        padding: 15px;
        background: #f8f9fa;
        border-radius: 10px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    @@media (max-width: 768px) {
        .dashboard-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="dashboard-container">
  <!-- <div class="dashboard-header">
        <h1>Welcome back, @Model.FirstName!</h1>
        <p>Track your progress and crush your fitness goals</p>
      </div>-->

    <div class="dashboard-grid">
        <!-- Total Workouts -->
        <div class="stat-card card1">
            <div class="stat-icon">🏋️</div>
            <span class="stat-value">@(stats?.TotalWorkouts ?? 0)</span>
            <p class="stat-label">Total Workouts</p>
        </div>

        <!-- Total Cards Completed -->
        <div class="stat-card card2">
            <div class="stat-icon">🎴</div>
            <span class="stat-value">@(stats?.TotalCardsCompleted ?? 0)</span>
            <p class="stat-label">Cards Completed</p>
        </div>

        <!-- Best Time -->
        <div class="stat-card card3">
            <div class="stat-icon">⏱️</div>
            <span class="stat-value">@(stats?.BestTime ?? "N/A")</span>
            <p class="stat-label">Best Time</p>
        </div>

        <!-- Challenge Status -->
        <div class="stat-card card4">
            <div class="stat-icon">@(stats?.HasCompleted52Cards == true ? "🏆" : "🎯")</div>
            <span class="stat-value">@(stats?.HasCompleted52Cards == true ? "Complete!" : "In Progress")</span>
            <p class="stat-label">52-Card Challenge</p>
        </div>
    </div>

    <div class="dashboard-grid action-buttons">
        <a href="@Url.Action("Exercise", "Profile")" class="action-btn">
            <span></span> Start New Workout
        </a>
        <a href="@Url.Action("WorkoutHistory", "Profile")" class="action-btn">
            <span></span> Workout History
        </a>
        <a href="@Url.Action("Leaderboard", "Profile")" class="action-btn">
            <span></span> Leaderboard
        </a>
        <a href="@Url.Action("Profile", "Profile")" class="action-btn">
            <span></span> My Profile
        </a>
    </div>

    @if (stats?.RecentWorkouts != null && stats.RecentWorkouts.Any())
    {
        <div class="recent-workouts">
            <h3>Recent Workouts</h3>
            @foreach (var workout in stats.RecentWorkouts.Take(5))
            {
                <div class="workout-item">
                    <div>
                        <strong>@workout.CardsCompleted cards</strong> completed
                        <br />
                        <small>@workout.StartedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                    <div>
                        <strong>⏱️ @workout.TimeElapsed</strong>
                    </div>
                </div>
            }
        </div>
    }
   
</div>

